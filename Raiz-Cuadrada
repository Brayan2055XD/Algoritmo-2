using System;

class Program
{
    static void Main()
    {
        // Solicita al usuario que introduzca un numero
        Console.Write("Introduce un numero: ");
        double number = Convert.ToDouble(Console.ReadLine());

        // Calcula la raiz cuadrada del numero
        double result = Sqrt(number);

        // Muestra el resultado en la consola
        Console.WriteLine("La raiz cuadrada de " + number + " es " + result);
    }

    static double Sqrt(double number, double epsilon = 0.00001)
    {
        // Comprueba si el numero es negativo
        if (number < 0)
        {
            throw new ArgumentException("El numero debe ser no negativo");
        }

        // Estimacion inicial de la raiz cuadrada
        double guess = number / 2.0;

        // Mientras el cuadrado de la suposicion actual, difiere del numero original en más que epsilon
        while (Math.Abs(guess * guess - number) >= epsilon)
        {
            // Realiza una nueva suposicion utilizando el metodo de Newton
            guess = (guess + number / guess) / 2.0;
        }

        // Devuelve la suposición actual como la raíz cuadrada del número
        return guess;
    }
}
